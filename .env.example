# Database Configuration
# Replace user, password, host, and database name with your actual values
DATABASE_URL="postgresql://user:password@localhost:5432/finance_db"

# Next Auth Configuration (for future authentication setup)
# Generate a secret using: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Application Configuration
NODE_ENV="development"                  # development, production, or test
PORT=3000                              # Application port number

# API Rate Limiting
RATE_LIMIT_MAX=100                     # Maximum number of requests per window
RATE_LIMIT_WINDOW_MS=900000           # Time window in milliseconds (15 minutes)

# Feature Flags
ENABLE_ANALYTICS=false                 # Enable/disable analytics tracking
ENABLE_NOTIFICATIONS=true              # Enable/disable notification system

# Optional: External Service Integration (for future use)
# STRIPE_SECRET_KEY=""                # For payment processing
# SENDGRID_API_KEY=""                 # For email notifications
# AWS_S3_BUCKET=""                    # For file storage 